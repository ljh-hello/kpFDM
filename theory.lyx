\begin_layout Standard
Consider the following Hamiltonian
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\sum_{\alpha}^{A}\left[K^{\alpha^{\prime}\alpha}\left(\vec{R}\right)+V^{\alpha^{\prime}\alpha}\left(\vec{R}\right)\right]\left|F_{\alpha}\right\rangle =E\left|F_{\alpha^{\prime}}\right\rangle 
\end{equation}

\end_inset


\begin_inset Newline newline
\end_inset

where
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
K^{\alpha^{\prime}\alpha}\left(\vec{R}\right)=\frac{1}{2m_{0}}\left[\vec{P}^{\alpha^{\prime}\alpha}\cdot\vec{P}+\vec{P}\cdot\vec{P}^{\alpha^{\prime}\alpha}\right]+\sum_{i,j}^{x,y,z}P_{i}\gamma_{ij}^{\alpha^{\prime}\alpha}\left(\vec{R}\right)P_{j}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\vec{P}^{\alpha^{\prime}\alpha}=\left\langle \alpha^{\prime}\left|\vec{P}\right|\alpha\right\rangle 
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\gamma_{ij}^{\alpha^{\prime}\alpha}=\sum_{\beta}^{B}\left[\frac{\delta_{\alpha^{\prime}\alpha}\delta_{ij}}{2m_{0}}+\tilde{P}_{ij}^{\alpha^{\prime}\beta\alpha}\left(\vec{R}\right)\right]
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\tilde{P}_{ij}^{\alpha^{\prime}\beta\alpha}\left(\vec{R}\right)=\frac{\left(P_{i}^{\alpha^{\prime}\beta}P_{j}^{\beta\alpha}\right)\left(\vec{R}\right)}{\Delta^{\alpha\beta}\left(\vec{R}\right)}
\end{equation}

\end_inset


\begin_inset Newline newline
\end_inset

and finally
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
V^{\alpha^{\prime}\alpha}\left(\vec{R}\right)=\delta_{\alpha^{\prime}\alpha}E_{0}^{\alpha}\left(\vec{R}\right)+\delta_{\alpha^{\prime}\alpha}\Phi^{\alpha}\left(\vec{R}\right)+h_{SO}^{\alpha^{\prime}\alpha}\left(\vec{R}\right)\label{eq:generalPot}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
h_{SO}^{\alpha^{\prime}\alpha}\left(\vec{R}\right)=\left\langle \alpha^{\prime}\left|\frac{\hbar}{4m_{0}^{2}c^{2}}\left(\vec{\nabla}V(\vec{R})\times\vec{p}\right)\cdot\vec{\sigma}\right|\alpha\right\rangle 
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
The envelope function 
\begin_inset Formula $\left|F_{l}\right\rangle $
\end_inset

 is represented by
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray}
\Psi_{n}\left(\vec{r}\right) & = & \sum_{l}f_{l}\left(\vec{r}\right)u_{l,\vec{k}_{0}}\left(\vec{r}\right)\nonumber \\
\left|\Psi_{n}\right\rangle  & = & \sum_{l}\left|F_{l},l\right\rangle \nonumber \\
\left\langle \vec{r}|\Psi_{n}\right\rangle  & = & \Psi_{n}\left(\vec{r}\right)\nonumber \\
\left\langle \vec{r}|F_{l},l\right\rangle  & = & f_{l}\left(\vec{r}\right)u_{l,\vec{k}_{0}}\left(\vec{r}\right)
\end{eqnarray}

\end_inset


\end_layout

\begin_layout Standard
So, in real space
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\sum_{\alpha}^{A}\left[K^{\alpha^{\prime}\alpha}\left(\vec{r}\right)+V^{\alpha^{\prime}\alpha}\left(\vec{r}\right)\right]\, f_{\alpha}\left(\vec{r}\right)=E\, f_{\alpha^{\prime}}\left(\vec{r}\right)\label{eq:envHam}
\end{equation}

\end_inset


\end_layout

\begin_layout Subsection
Super-cell concept
\end_layout

\begin_layout Standard
\begin_inset Formula $\phantom{}$
\end_inset

 
\end_layout

\begin_layout Standard
To solve systems with periodic boundarie conditions, such as super-lattices,
 is convinient to write the envelope function as periodic part times a plane
 wave, i.e.,
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
f_{\alpha\vec{k}}\left(\vec{r}\right)=e^{i\vec{k}\cdot\vec{r}}g_{\alpha}\left(\vec{r}\right)
\end{equation}

\end_inset


\begin_inset Newline newline
\end_inset

then equation (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:envHam"

\end_inset

) is written as
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\sum_{\alpha}^{A}\left[K^{\alpha^{\prime}\alpha}\left(\vec{r}\right)+V^{\alpha^{\prime}\alpha}\left(\vec{r}\right)\right]\, e^{i\vec{k}\cdot\vec{r}}g_{\alpha}\left(\vec{r}\right)=E\, e^{i\vec{k}\cdot\vec{r}}g_{\alpha^{\prime}}\left(\vec{r}\right)\label{eq:hamiltonian}
\end{equation}

\end_inset


\end_layout

\begin_layout Subsection
One band model withou spin-orbit
\end_layout

\begin_layout Standard
\begin_inset Formula $\phantom{}$
\end_inset


\end_layout

\begin_layout Standard
In this model, the potential is writen as
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
V\left(\vec{r}\right)=E_{0}\left(\vec{r}\right)
\end{equation}

\end_inset


\begin_inset Newline newline
\end_inset

and the kinetic term
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
K\left(\vec{r}\right)=\sum_{i,j}^{x,y,z}p_{i}\gamma_{ij}\left(\vec{r}\right)p_{j}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
Substituting the above terms into equation (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:hamiltonian"

\end_inset

), we get
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\left[\sum_{i,j}^{x,y,z}p_{i}\gamma_{ij}\left(\vec{r}\right)p_{j}+E_{0}\left(\vec{r}\right)\right]\, e^{i\vec{k}\cdot\vec{r}}g\left(\vec{r}\right)=E\left(\vec{k}\right)\, e^{i\vec{k}\cdot\vec{r}}g\left(\vec{r}\right)
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
Expanding the terms, assuming that 
\begin_inset Formula $p_{l}\rightarrow-i\hbar\partial_{l}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray}
\hbar^{2}\partial_{i}\gamma_{ij}\left(\vec{r}\right)\partial_{j}\left[e^{i\vec{k}\cdot\vec{r}}g\left(\vec{r}\right)\right] & = & \hbar^{2}\left\{ \partial_{i}\gamma_{ij}\left(\vec{r}\right)\left[ik_{j}e^{i\vec{k}\cdot\vec{r}}g\left(\vec{r}\right)+e^{i\vec{k}\cdot\vec{r}}\partial_{j}g\left(\vec{r}\right)\right]\right\} \nonumber \\
 & = & \hbar^{2}\left\{ \left[\partial_{i}\gamma_{ij}\left(\vec{r}\right)\right]\left[ik_{j}e^{i\vec{k}\cdot\vec{r}}g\left(\vec{r}\right)+e^{i\vec{k}\cdot\vec{r}}\partial_{j}g\left(\vec{r}\right)\right]+\gamma_{ij}\left(\vec{r}\right)\partial_{i}\left[ik_{j}e^{i\vec{k}\cdot\vec{r}}g\left(\vec{r}\right)+e^{i\vec{k}\cdot\vec{r}}\partial_{j}g\left(\vec{r}\right)\right]\right\} \nonumber \\
 & = & \hbar^{2}\left\{ \left[\partial_{i}\gamma_{ij}\left(\vec{r}\right)\right]\left[ik_{j}e^{i\vec{k}\cdot\vec{r}}g\left(\vec{r}\right)+e^{i\vec{k}\cdot\vec{r}}\partial_{j}g\left(\vec{r}\right)\right]\right.\nonumber \\
 &  & \left.+\gamma_{ij}\left(\vec{r}\right)\left[-k_{j}k_{i}e^{i\vec{k}\cdot\vec{r}}g\left(\vec{r}\right)+ik_{j}e^{i\vec{k}\cdot\vec{r}}\partial_{i}g\left(\vec{r}\right)+ik_{i}e^{i\vec{k}\cdot\vec{r}}\partial_{j}g\left(\vec{r}\right)+e^{i\vec{k}\cdot\vec{r}}\partial_{i}\partial_{j}g\left(\vec{r}\right)\right]\right\} \nonumber \\
 & = & \hbar^{2}\left\{ i\partial_{i}\gamma_{ij}\left(\vec{r}\right)k_{j}+\partial_{i}\gamma_{ij}\left(\vec{r}\right)\partial_{j}-\gamma_{ij}\left(\vec{r}\right)k_{j}k_{i}+i\gamma_{ij}\left(\vec{r}\right)k_{j}\partial_{i}+i\gamma_{ij}\left(\vec{r}\right)k_{i}\partial_{j}+\gamma_{ij}\left(\vec{r}\right)\partial_{i}\partial_{j}\right\} e^{i\vec{k}\cdot\vec{r}}g\left(\vec{r}\right)\label{eq:effmas_derivative}
\end{eqnarray}

\end_inset


\end_layout

\begin_layout Standard
Lets rename equation (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:effmas_derivative"

\end_inset

) to
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\nabla_{\gamma,ij}\left(\vec{r}\right)=\hbar^{2}\left\{ i\partial_{i}\gamma_{ij}\left(\vec{r}\right)k_{j}+\partial_{i}\gamma_{ij}\left(\vec{r}\right)\partial_{j}-\gamma_{ij}\left(\vec{r}\right)k_{j}k_{i}+i\gamma_{ij}\left(\vec{r}\right)k_{j}\partial_{i}+i\gamma_{ij}\left(\vec{r}\right)k_{i}\partial_{j}+\gamma_{ij}\left(\vec{r}\right)\partial_{i}\partial_{j}\right\} 
\end{equation}

\end_inset


\begin_inset Newline newline
\end_inset

but, to ensure hermiticity
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\nabla_{\gamma,ij}\left(\vec{r}\right)=\hbar^{2}\left\{ \partial_{i}\gamma_{ij}\left(\vec{r}\right)\partial_{j}-\gamma_{ij}\left(\vec{r}\right)k_{j}k_{i}+\gamma_{ij}\left(\vec{r}\right)\partial_{i}\partial_{j}\right\} 
\end{equation}

\end_inset


\begin_inset Newline newline
\end_inset

then
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\hbar^{2}\partial_{i}\gamma_{ij}\left(\vec{r}\right)\partial_{j}\left[e^{i\vec{k}\cdot\vec{r}}g\left(\vec{r}\right)\right]=\nabla_{\gamma,ij}\left(\vec{r}\right)e^{i\vec{k}\cdot\vec{r}}g\left(\vec{r}\right)
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
Finally,
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray}
\sum_{i,j}^{x,y,z}\nabla_{\gamma,ij}\left(\vec{r}\right)e^{i\vec{k}\cdot\vec{r}}g\left(\vec{r}\right)+E_{0}\left(\vec{r}\right)e^{i\vec{k}\cdot\vec{r}}g\left(\vec{r}\right) & = & E\, e^{i\vec{k}\cdot\vec{r}}g\left(\vec{r}\right)\nonumber \\
\left\{ \sum_{i,j}^{x,y,z}\nabla_{\gamma,ij}\left(\vec{r}\right)+E_{0}\left(\vec{r}\right)\right\} e^{i\vec{k}\cdot\vec{r}}g\left(\vec{r}\right) & = & E\, e^{i\vec{k}\cdot\vec{r}}g\left(\vec{r}\right)\nonumber \\
\left\{ \sum_{i,j}^{x,y,z}\nabla_{\gamma,ij}\left(\vec{r}\right)+E_{0}\left(\vec{r}\right)\right\} g\left(\vec{r}\right) & = & E\, g\left(\vec{r}\right)\label{eq:oneBandEnveHam}
\end{eqnarray}

\end_inset


\end_layout

\begin_layout Subsection
Degenerate bands with spin-orbit
\end_layout

\begin_layout Standard
\begin_inset Formula $\phantom{}$
\end_inset


\end_layout

\begin_layout Standard
Re-writting equation (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:hamiltonian"

\end_inset

) with the standard basis set (Rolf, page 206)
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\left\{ \sum_{\alpha}\delta_{\alpha^{\prime}\alpha}E_{0}^{\alpha}\left(\vec{R}\right)+\left[\begin{array}{cccccc}
Q & S & R & 0 & \frac{i}{\sqrt{2}}S & -i\sqrt{2}R\\
S^{\dagger} & T & 0 & R & -\frac{i}{\sqrt{2}}\left(Q-T\right) & i\sqrt{\frac{3}{2}}S\\
R^{\dagger} & 0 & T & -S & -i\sqrt{\frac{3}{2}}S^{\dagger} & -\frac{i}{\sqrt{2}}\left(Q-T\right)\\
0 & R^{\dagger} & -S^{\dagger} & Q & -i\sqrt{2}R^{\dagger} & -\frac{i}{\sqrt{2}}S^{\dagger}\\
-\frac{i}{\sqrt{2}}S^{\dagger} & \frac{i}{\sqrt{2}}\left(Q-T\right) & i\sqrt{\frac{3}{2}}S & i\sqrt{2}R & \frac{1}{2}\left(Q+T\right)-\Delta_{SO} & 0\\
i\sqrt{2}R^{\dagger} & -i\sqrt{\frac{3}{2}}S^{\dagger} & \frac{i}{\sqrt{2}}\left(Q-T\right) & \frac{i}{\sqrt{2}}S & 0 & \frac{1}{2}\left(Q+T\right)-\Delta_{SO}
\end{array}\right]\right\} \, e^{i\vec{k}\cdot\vec{r}}g_{\alpha}\left(\vec{r}\right)=E\, e^{i\vec{k}\cdot\vec{r}}g_{\alpha^{\prime}}\left(\vec{r}\right)
\end{equation}

\end_inset


\begin_inset Newline newline
\end_inset

with terms given by
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray}
Q & = & -\left(\gamma_{1}+\gamma_{2}\right)\frac{p_{x}^{2}}{\hbar^{2}}-\left(\gamma_{1}+\gamma_{2}\right)\frac{p_{y}^{2}}{\hbar^{2}}-\left(\gamma_{1}-2\gamma_{2}\right)\frac{p_{z}^{2}}{\hbar^{2}}\nonumber \\
T & = & -\left(\gamma_{1}-\gamma_{2}\right)\frac{p_{x}^{2}}{\hbar^{2}}-\left(\gamma_{1}-\gamma_{2}\right)\frac{p_{y}^{2}}{\hbar^{2}}-\left(\gamma_{1}+2\gamma_{2}\right)\frac{p_{z}^{2}}{\hbar^{2}}\nonumber \\
S & = & i\sqrt{3}\left[\gamma_{3}\left(p_{x}-ip_{y}\right)\frac{p_{z}}{\hbar^{2}}\right]\nonumber \\
R & = & -\sqrt{3}\left[\gamma_{2}\frac{\left(p_{x}^{2}-p_{y}^{2}\right)}{\hbar^{2}}-i\gamma_{3}\frac{p_{x}p_{y}}{\hbar^{2}}\right]
\end{eqnarray}

\end_inset


\begin_inset Newline newline
\end_inset

with
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray}
p_{l}\left[e^{i\vec{k}\cdot\vec{r}}g_{\alpha}\left(\vec{r}\right)\right] & = & \left(-i\hbar\partial_{l}\right)\left[e^{i\vec{k}\cdot\vec{r}}g_{\alpha}\left(\vec{r}\right)\right]\nonumber \\
 & = & -i\hbar\left[ik_{l}e^{i\vec{k}\cdot\vec{r}}g_{\alpha}\left(\vec{r}\right)+e^{i\vec{k}\cdot\vec{r}}\partial_{l}g_{\alpha}\left(\vec{r}\right)\right]\nonumber \\
 & = & e^{i\vec{k}\cdot\vec{r}}\left[k_{l}-i\hbar\partial_{l}\right]g_{\alpha}\left(\vec{r}\right)
\end{eqnarray}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray}
p_{l}^{2}\left[e^{i\vec{k}\cdot\vec{r}}g_{\alpha}\left(\vec{r}\right)\right] & = & \left(-i\hbar\partial_{l}\right)\left(-i\hbar\partial_{l}\right)\left[e^{i\vec{k}\cdot\vec{r}}g_{\alpha}\left(\vec{r}\right)\right]\nonumber \\
 & = & -\hbar^{2}\left(\partial_{l}\right)\left[ik_{l}e^{i\vec{k}\cdot\vec{r}}g_{\alpha}\left(\vec{r}\right)+e^{i\vec{k}\cdot\vec{r}}\partial_{l}g_{\alpha}\left(\vec{r}\right)\right]\nonumber \\
 & = & -\hbar^{2}\left[-k_{l}^{2}e^{i\vec{k}\cdot\vec{r}}g_{\alpha}\left(\vec{r}\right)+ik_{l}e^{i\vec{k}\cdot\vec{r}}\partial_{l}g_{\alpha}\left(\vec{r}\right)+ik_{l}e^{i\vec{k}\cdot\vec{r}}g_{\alpha}\left(\vec{r}\right)+e^{i\vec{k}\cdot\vec{r}}\partial_{l}^{2}g_{\alpha}\left(\vec{r}\right)\right]\nonumber \\
 & = & -\hbar^{2}e^{i\vec{k}\cdot\vec{r}}\left[-k_{l}^{2}+ik_{l}\partial_{l}+ik_{l}+\partial_{l}^{2}\right]g_{\alpha}\left(\vec{r}\right)
\end{eqnarray}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray}
p_{l}p_{m}\left[e^{i\vec{k}\cdot\vec{r}}g_{\alpha}\left(\vec{r}\right)\right] & = & \left(-i\hbar\partial_{l}\right)\left(-i\hbar\partial_{m}\right)\left[e^{i\vec{k}\cdot\vec{r}}g_{\alpha}\left(\vec{r}\right)\right]\nonumber \\
 & = & -\hbar^{2}\left(\partial_{l}\right)\left[ik_{m}e^{i\vec{k}\cdot\vec{r}}g_{\alpha}\left(\vec{r}\right)+e^{i\vec{k}\cdot\vec{r}}\partial_{m}g_{\alpha}\left(\vec{r}\right)\right]\nonumber \\
 & = & -\hbar^{2}\left[-k_{m}k_{l}e^{i\vec{k}\cdot\vec{r}}g_{\alpha}\left(\vec{r}\right)+ik_{m}e^{i\vec{k}\cdot\vec{r}}\partial_{l}g_{\alpha}\left(\vec{r}\right)+ik_{l}e^{i\vec{k}\cdot\vec{r}}g_{\alpha}\left(\vec{r}\right)+e^{i\vec{k}\cdot\vec{r}}\partial_{l}\partial_{m}g_{\alpha}\left(\vec{r}\right)\right]\nonumber \\
 & = & -\hbar^{2}e^{i\vec{k}\cdot\vec{r}}\left[-k_{m}k_{l}+ik_{m}\partial_{l}+ik_{l}+\partial_{l}\partial_{m}\right]g_{\alpha}\left(\vec{r}\right)
\end{eqnarray}

\end_inset


\end_layout

