\begin_layout Standard
Lets start by the most simple model, the quantum well.
 In this model, all the variations occurs in one dimension.
 If we label this preferencial dimension as 
\begin_inset Formula $z$
\end_inset

, then, 
\begin_inset Formula $p_{l}\rightarrow-i\hbar\partial_{l}$
\end_inset

 only for 
\begin_inset Formula $l=z$
\end_inset

.
\end_layout

\begin_layout Standard
The potential is written as
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
V\left(\vec{r}\right)=V\left(z\right)=E_{0}\left(z\right)
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
The envelope function as
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
f_{\vec{k}}\left(\vec{r}\right)=e^{i\vec{k}\cdot\vec{r}}g\left(z\right)\label{eq:enve_qw}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
And the kinetic term as
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\nabla_{\gamma,ij}\left(z\right)=\hbar^{2}\left\{ \partial_{i}\gamma_{ij}\left(z\right)\partial_{j}-\gamma_{ij}\left(z\right)k_{j}k_{i}+\gamma_{ij}\left(z\right)\partial_{i}\partial_{j}\right\} 
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray}
\sum_{j}^{x,y,z}\nabla_{\gamma,xj}\left(z\right) & = & -\hbar^{2}\left[\gamma_{xj}\left(z\right)k_{j}k_{x}\right]\nonumber \\
 & = & -\hbar^{2}\left[\gamma_{xx}\left(z\right)k_{x}^{2}+\gamma_{xy}\left(z\right)k_{y}k_{x}+\gamma_{xz}\left(z\right)k_{z}k_{x}\right]
\end{eqnarray}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray}
\sum_{j}^{x,y,z}\nabla_{\gamma,yj}\left(z\right) & = & -\hbar^{2}\left[\gamma_{yj}\left(z\right)k_{j}k_{y}\right]\nonumber \\
 & = & -\hbar^{2}\left[\gamma_{yx}\left(z\right)k_{x}k_{y}+\gamma_{yy}\left(z\right)k_{y}^{2}+\gamma_{yz}\left(z\right)k_{z}k_{y}\right]
\end{eqnarray}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray}
\sum_{j}^{x,y,z}\nabla_{\gamma,zj}\left(z\right) & = & \hbar^{2}\left[\partial_{z}\gamma_{zj}\left(z\right)\partial_{j}-\gamma_{zj}\left(z\right)k_{j}k_{z}+\gamma_{zj}\left(z\right)\partial_{z}\partial_{j}\right]\nonumber \\
 & = & -\hbar^{2}\left\{ \gamma_{zz}\left(z\right)k_{z}^{2}+\gamma_{zy}\left(z\right)k_{y}k_{z}+\gamma_{zx}\left(z\right)k_{x}k_{z}-\partial_{z}\left[\gamma_{zz}\left(z\right)\partial_{z}\right]\right\} 
\end{eqnarray}

\end_inset


\begin_inset Newline newline
\end_inset

putting all together
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray}
\sum_{i,j}^{x,y,z}\nabla_{\gamma,ij}\left(z\right) & = & -\hbar^{2}\left[\gamma_{xx}\left(z\right)k_{x}^{2}+\gamma_{yy}\left(z\right)k_{y}^{2}+\gamma_{zz}\left(z\right)k_{z}^{2}+2\gamma_{xy}\left(z\right)k_{y}k_{x}+2\gamma_{xz}\left(z\right)k_{z}k_{x}+2\gamma_{yz}\left(z\right)k_{z}k_{y}\right]\nonumber \\
 &  & +\hbar^{2}\left\{ \partial_{z}\left[\gamma_{zz}\left(z\right)\partial_{z}\right]\right\} \label{eq:kinetic_qw}
\end{eqnarray}

\end_inset


\end_layout

